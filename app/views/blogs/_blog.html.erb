<!-- This page generates the individual blog posts -->

<div id="content">
    <div class="blogPost">
      <h1><%= blog.title %></h1>
      <h2>-posted  <%= time_ago_in_words(blog.created_at) %> ago.</h2>
      <br /> 
      <% t = blog.taggings.all %>
      <% t.each do |tag| %> 
	      <a href="<%= life_tags_path(Tag.find_by_id(tag.tag_id)) %>"><%= tag.title %></a>
      <% end %>
      <div class="lineBreak"></div>
      <h3><%= blog.content.html_safe %></h3>
    
      <% if signed_in? %> 
	      <%= link_to "edit", edit_life_path(blog) %>
	      <br />
		<%= link_to "add a tag", life_taggings_path(blog) %>
	      <br /> 
	      <%= link_to "delete", life_path(blog), :method => :delete, 
                                    		     :confirm => "Are you sure?",
				    		     :title => "Delete #{blog.title}" %>
     <% end %> 
     </div>                             
</div>
