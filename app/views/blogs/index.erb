<!-- This page shows all of the blogs made on the site 10 blogs at a time -->

<% if params[:search] %>

<%= render 'blogs/search' %>

<% else %>

	<% if Blog.first != nil %>
		<div id="viewTags"><h3>View: <%= link_to "All Tags", life_tags_path(Blog.first.id) %></h3></div>
	<% end %>

	<!-- the conditional exists so that the site will render immediately 
	upon deployment -->	
	<% unless Blog.to_s.empty? %>
		<table>
			<%= render @blog %>
		</table>
		<div id="paginate">
			<%= will_paginate @blog %>		


		</div	>

		</div	>

	<% end %>	

<% end %>
