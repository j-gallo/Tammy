<!-- This is the from to edit blog posts -->

<%= form_for @blog, :url => life_path(@blog) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
  <%= f.label :title, "This is the title of the Blog" %>
  <br />
  <%= f.text_field :title %>
  <br />
  <%= f.label :content, "This is the body of the Blog" %>
  <br />
  <%= f.text_area :content %>
  <br />
  <%= f.submit "Submit" %>
<% end %>

<!-- This calls the script to render the WYSIWYG -->
  <script>
	  CKEDITOR.replace( 'blog_content' );
  </script>
