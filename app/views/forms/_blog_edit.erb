<!-- This is the form that is used to edit blog posts -->

<%= form_tag life_path, :method => 'put' do %>
  <%= label_tag :title, "This is the title of the Blog" %>
  <br />
  <%= text_field_tag :title, Blog.find(params[:id]).title %>
  <br />
  <%= label_tag :content, "This is the body of the Blog" %>
  <br />
  <%= text_area_tag :content, Blog.find(params[:id]).content %>
  <br />
  <%= submit_tag "Submit" %>
<% end %>

  <script type = "text/javascript">
	  CKEDITOR.replace( 'content' );
  </script>
