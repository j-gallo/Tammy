<!-- This is the from to create blog posts -->

<%= form_tag life_index_path, :method => 'post' do %>
	<%= render 'shared/error_messages', :object => @blog %>
  <%= label_tag :title, "This is the title of the Blog" %>
  <br />
  <%= text_field_tag :title %>
  <br />
  <%= label_tag :content, "This is the body of the Blog" %>
  <br />
  <%= text_area_tag :content %>
  <br />
  <%= submit_tag "Submit" %>
<% end %>

<!-- This calls the script to render the WYSIWYG -->
<script>
	CKEDITOR.replace('content', {
		filebrowserBrowseUrl : '/browser/browse/type/all',
		filebrowserUploadUrl : '/browser/upload/type/all',
		filebrowserImageBrowseUrl : '/browser/browse/type/image',
		filebrowserImageUploadUrl : '/browser/upload/type/image',
		filebrowserWindowWidth  : 800,
		filebrowserWindowHeight : 500
	});
</script>
