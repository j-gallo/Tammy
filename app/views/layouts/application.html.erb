<!DOCTYPE html>
<html>
  <head>

  <title><%= title %></title>

    <%= stylesheet_link_tag :all %>

    <%= javascript_include_tag 'ckeditor/ckeditor.js' %>

    <%= javascript_include_tag :defaults %> 

    <%= csrf_meta_tag %>

  </head>
  <body>
    <div id="container">		
      <%= render 'layouts/header' %>

      <%flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>

    <%= yield %>
    </div>
  </body>
</html>
