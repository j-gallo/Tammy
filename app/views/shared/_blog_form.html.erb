<%= form_for @blog do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.label "This is the title of the Blog" %>
  <br />
  <%= f.text_field :title %>
  <br />
  <%= f.label "This is the body of the Blog" %>
  <br />
  <%= f.text_area :content, :class => :mceEditor %>
  <br />
  <%= f.submit "Submit" %>
<% end %>
