          tweets: {
            background: '#f2f2f2',
            color: '#002f32',
            links: '#42826c'
                  }
                },
        features: {
          scrollbar: false,
          loop: false,
          live: false,
          behavior: 'all'
                  }
  }).render().setUser('tammyportnoy').start();
</script>
</div>
